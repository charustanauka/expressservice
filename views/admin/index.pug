extends ../layout

block content
  div(class="jumbotron jumbotron-fluid bg-dark text-white")
    h1(class='display-1')= title
  div(class='container')
    <a class="btn btn-primary btn-block mb-3" href="/admin/news/add" role="button">Add news</a>
    table(class="table table-striped table-hover")
      tr
        th id
        th title
        th created
        th action
      each item, index in data
        tr
          td= index+1
          td= item.title
          td= item.created
          td
            a(href=`/admin/news/delete/${item._id}` class="btn btn-outline-danger") Delete